<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_back"
                android:tint="@color/primary_brown"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ajouter un Produit"
                android:textSize="20sp"
                android:textColor="@color/primary_brown"
                android:textStyle="bold"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <!-- Form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <EditText
                android:id="@+id/etProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nom du produit"
                android:padding="16dp"
                android:background="@drawable/edittext_white_background"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etProductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Prix (ex: 1200â‚¬)"
                android:inputType="text"
                android:padding="16dp"
                android:background="@drawable/edittext_white_background"
                android:layout_marginBottom="16dp"/>

            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@drawable/edittext_white_background"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etProductDescription"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Description du produit"
                android:gravity="top|start"
                android:padding="16dp"
                android:background="@drawable/edittext_white_background"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnSelectImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“· Ajouter une image"
                android:textColor="@color/primary_brown"
                android:background="@drawable/button_image_picker"
                android:padding="16dp"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btnSaveProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enregistrer"
                style="@style/ButtonPrimary"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>